                            <li><i class="fa fa-{% if flat.microwave == 1 %}check{% else %}times{% endif %}"
                                   aria-hidden="true"></i>Микроволновка
                            </li>
                            <li><i class="fa fa-{% if flat.washer == 1 %}check{% else %}times{% endif %}"
                                   aria-hidden="true"></i>Стиральная машина
                            </li>
                            <li><i class="fa fa-{% if flat.bath == 1 %}check{% else %}times{% endif %}"
                                   aria-hidden="true"></i>Ванна
                            </li>
                            <li><i class="fa fa-{% if flat.shower == 1 %}check{% else %}times{% endif %}"
                                   aria-hidden="true"></i>Душ
                            </li>

                            <li><i class="fa fa-{% if flat.fridge == 1 %}check{% else %}times{% endif %}"
                                   aria-hidden="true"></i>Холодильник
                            </li>
                            <li><i class="fa fa-{% if flat.dishes == 1 %}check{% else %}times{% endif %}"
                                   aria-hidden="true"></i>Посуда
                            </li>
                            <li><i class="fa fa-{% if flat.linens == 1 %}check{% else %}times{% endif %}"
                                   aria-hidden="true"></i>Постельное белье
                            </li>


                        </ul>
                    </div>
                </div>


            </div>

            <div class="col-md-4">

                <div class="an-sidebar">
                    <div class="widget-contact-details no-margin">

                        <div class="contact-info">
                            <h2>Квартира на сутки
                                - {{ flat.city }}</br>{{ flat.streettype }} {{ flat.street }} {{ flat.home }}</h2>

                            <div class="listing-meta">
                                        <span><i class="fa fa-bed" aria-hidden="true"></i>Кол-во спальных мест:
                                            {{ flat.numberofbeds }}</span>
                                <span><i class="fa fa-building-o" aria-hidden="true"></i>Кол-во комнат:
                                    {{ flat.rooms }}</span>
                                <span><a href="#"><i class="fa fa-subway" aria-hidden="true"></i>Ближайшее метро:
                                        {{ flat.metro }}</a></span>
                                <span><a href="#"><i class="fa fa-money" aria-hidden="true"></i>Цена за день:
                                        {{ flat.priceday }} BYN</a></span>
                                <span><a href="#"><i class="fa fa-money" aria-hidden="true"></i>Цена за час:
                                                от {{ flat.pricehour }} BYN</a></span>
                                <span><a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i>Город:
                                        {{ flat.city }}</a></span>
                            </div>
                        </div>
                    </div> <!-- end widget-contact-details -->
                    <div class="widget-opening-hours no-margin">



                        <h4>Контактные данные:</h4>
                        <div class="hours-list-single">

                            <span><i class="fa fa-phone" aria-hidden="true"></i> Телефон: <a style="color:white;"
                                                                                             href="callto: {{ flat.telnumber }}">{{ flat.telnumber }}</a></span>
                        </div>

                    </div>



                    </div> <!-- end an-news-container -->
                </div> <!-- end an-sidebar -->

            </div>
        </div>
        {#Additional information#}

    </div>



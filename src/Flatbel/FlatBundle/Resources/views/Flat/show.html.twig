{% block body %}
    <article>
        <section>
            <div class="block" style="margin-top: 4%">
                <header>
                    <h1>{{ flat.streettype }} {{ flat.street }} {{ flat.home }}</h1>
                </header>


                <div class="row">
                    <div class="col-lg-5" >
                    <!-- Carousel
    ================================================== -->
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img class="first-slide" src="{{ asset(['uploads/photos/', flat.mainphoto]|join) }}"
                                     style="width: 600px" alt="{{ flat.description }} image not found"">
                            </div>
                            <div class="item">
                                <img class="second-slide" src="{{ asset(['uploads/photos/', flat.photo1]|join) }}"
                                     style="width: 600px" alt="{{ flat.description }} image not found"">
                            </div>
                            <div class="item">
                                <img class="third-slide" src="{{ asset(['uploads/photos/', flat.photo2]|join) }}"
                                     style="width: 600px" alt="{{ flat.description }} image not found"">
                            </div>
                            <div class="item">
                                <img class="third-slide" src="{{ asset(['uploads/photos/', flat.photo3]|join) }}"
                                     style="width: 600px" alt="{{ flat.description }} image not found"">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div><!-- /.carousel -->
                </div>
            </div>

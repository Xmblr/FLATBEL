    <div class="an-inner-banner">

        <div class="container">
            <div class="an-advertise">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="ad-details">

                            <h1><a href="#">{{ flat.streettype }} {{ flat.street }} - {{ flat.home }}</a></h1>
                            <div class="listing-meta">
                                {#<span><a class="color-hotel" href="#">Restaurant/Fine Dining</a></span>#}
                                {#<span class="user"><span class="meta-italic">By:</span><a href="#">Fiona Wilson</a></span>#}
                                {#<span><i class="typcn typcn-eye-outline color-job"></i> 10 234</span>#}
                                {#<span><i class="typcn typcn-heart-outline color-accents"></i> 234</span>#}
                                <span><i class="fa fa-building-o"
                                         aria-hidden="true"></i> {{ flat.rooms }} комн.</span><span><i
                                            class="fa fa-bed" aria-hidden="true"></i>{{ flat.numberofbeds }} спальное место</span>
                                <span><i class="fa fa-map-marker" aria-hidden="true"></i>{{ flat.city }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">


                        <div class="ad-price">

                            <div> <!-- Only required for left/right tabs -->
                                <div class="tab-content">
                                    <div class="tab-pane active h1" id="tab1"
                                         style="margin-bottom:0px; margin-top:0px;">
                                        <p style="margin-bottom:0px;">{{ flat.priceday }}/сутки</p>
                                    </div>
                                    <div class="tab-pane h1" id="tab2" style="margin-bottom:0px; margin-top:0px;">
                                        <p style="margin-bottom:0px;"> {{ flat.priceday }}/сутки</p>
                                    </div>
                                    <div class="tab-pane h1" id="tab3" style="margin-bottom:0px; margin-top:0px;">
                                        <p style="margin-bottom:0px;">{{ flat.priceday }}/сутки</p>
                                    </div>
                                </div>
                                <span class="listing-meta">
                                    <span class="meta-italic">Перевести в:</span>
                                    <span class="active"><a href="#tab1" data-toggle="tab">BYN</a></span>
                                    <span><a href="#tab2" data-toggle="tab">USD</a></span>
                                    <span><a href="#tab3" data-toggle="tab">RUS</a></span>
                                </span>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end an-advertise -->
    </div> <!-- end cotnainer -->

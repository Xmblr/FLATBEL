{% block slide %}
    <div data-simulate-touch="false" data-autoplay="3500" data-slide-effect="fade"
         class="swiper-container swiper-slider">
        <div class="swiper-wrapper">
            <div data-slide-bg="{{ asset('img/slide-1.jpg') }}" class="swiper-slide"></div>
            <div data-slide-bg="{{ asset('img/slide-2.jpg') }}" class="swiper-slide"></div>
            <div data-slide-bg="{{ asset('img/slide-3.jpg') }}" class="swiper-slide"></div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row" style="width: 100%">
        {% for flat in flats %}

                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="{{ asset(['images/', flat.mainphoto]|join) }}" alt="photo" style="width: 70%"/>
                        <div class="caption">
                            <h2>
                                <a href="{{ path('FlatbelFlatBundle_flat_show', { 'description': flat.description }) }}">{{ flat.streettype }} {{ flat.street }}
                                    - {{ flat.home }}</a>
                            </h2>
                            <p>
                                {{ flat.about(100) }}
                            </p>
                            <p class="continue">
                                <a href="{{ path('FlatbelFlatBundle_flat_show', { 'description': flat.description }) }}">Подробнее...</a>
                            </p>
                        </div>
                    </div>
                </div>

        {% else %}
            <p>Квартиры не найдены</p>
        {% endfor %}
    </div>
    <div class="row" align="center">
        <a href="{{ path('FlatbelFlatBundle_flat_flats') }}">Смотреть все квартиры</a>
    </div>
{% endblock %}
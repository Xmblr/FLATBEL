{# src/Blogger/BlogBundle/Resources/views/Page/index.html.twig #}
{% extends 'FlatbelFlatBundle::layout.html.twig' %}

{% block slide %}
    <!-- Слайдшоу -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="first-slide" src="{{ asset('img/slide-1.jpg') }}" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Квартиры на сутки в Минске</h1>
                        <p>Более 100 квартир в нашем каталоге<br> на сутки, а также на часы в Минске</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Смотреть</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="second-slide" src="{{ asset('img/slide-2.jpg') }}" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>VIP-Квартира на сутки в Минске</h1>
                        <p>Квартира с евроремонтом в центре Минска</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Бронировать</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="third-slide" src="{{ asset('img/slide-3.jpg') }}" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Добавьте свою квартиру в наш каталог</h1>
                        <p>Бесплатное добавление квартиры в наш каталог</p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Добавить квартиру</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><!-- /.carousel -->
{% endblock %}

{% block body %}
    <div class="row">
        {% for flat in flats %}
            <div class="col-lg-4">
                <label class="alert-info">
                    <article class="text-center">
                        <header>
                            <h2>
                                <a href="{{ path('FlatbelFlatBundle_flat_show', { 'description': flat.description }) }}">{{ flat.streettype }} {{ flat.street }} - {{ flat.home }}</a>
                            </h2>
                        </header>

                        <img src="{{ asset(['images/', flat.mainphoto]|join) }}" style="width: 200px"/>
                        <div class="snippet">
                            <p>{{ flat.about(100) }}</p>
                            <p class="continue"><a
                                        href="{{ path('FlatbelFlatBundle_flat_show', { 'description': flat.description }) }}">Подробнее...</a>
                            </p>
                        </div>
                    </article>
                </label>
            </div>


        {% else %}
            <p>There are no blog entries for symblog</p>
        {% endfor %}
    </div>
{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

<div id="an-main-wrapper">
    <div class="an-login-register-content" style="background:rgba(0, 0, 0, 0.7)">

        <div class="content">
            <h1>Изменить пароль</h1>


            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}


            <div class="row">
                <div class="form-group">
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password, {'attr':{'class':'an-form-control light', 'placeholder':'Текущий пароль'}}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr':{'class':'an-form-control light', 'placeholder':'Новый пароль'}}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr':{'class':'an-form-control light', 'placeholder':'Повторите новый пароль'}}) }}
                </div>

                <div>
                    <input class="an-btn an-btn-default large-padding btn-lg" type="submit" value="{{ 'change_password.submit'|trans }}" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
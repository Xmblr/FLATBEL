{% trans_default_domain 'FOSUserBundle' %}


<div id="an-main-wrapper">
    <div class="an-login-register-content" style="background: url('../img/register.jpg') center center no-repeat;
        background-size: cover;">
        <div class="overlay"></div>
        <div class="content">
            <h1>Региcтрация</h1>

            <p>Уже зарегистрированы? <a href="{{ path('fos_user_security_login') }}">Авторизуйтесь</a></p>


            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'an-form'}}) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="form-group">
                    {{ form_widget(form.username, {'attr':{'class':'an-form-control light', 'placeholder':'Имя пользователя'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {'attr':{'class':'an-form-control light', 'placeholder':'E-mail'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.first, {'attr':{'class':'an-form-control light', 'placeholder':'Пароль'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.second, {'attr':{'class':'an-form-control light', 'placeholder':'Повторите пароль'}}) }}
                </div>
                <div>
                    <input type="submit" value="{{ 'registration.submit'|trans }}"
                           class="an-btn an-btn-default large-padding btn-lg"/>
                </div>

                {{ form_rest(form) }}
            </div>






        </div>
    </div>

{% trans_default_domain 'FOSUserBundle' %}

<section class="section-80 section-md-120">
    <div class="shell">
        <ul class="nav-custom">
            <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
            <li><a href="{{ path('fos_user_registration_register') }}" class="active">Register</a></li>
        </ul>
        <div class="range range-xs-center">
            <div class="cell-sm-8 cell-md-6 cell-lg-4">
                <!-- RD Mailform-->
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'text-left'}}) }}
                {{ form_errors(form)  }}
                    <div class="form-group">
                        {{ form_row(form.username, {'attr':{'class':'form-control form-control-gray form-control-has-validation form-control-last-child'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email, {'attr':{'class':'form-control form-control-gray form-control-has-validation form-control-last-child'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword.first, {'attr':{'class':'form-control form-control-gray form-control-has-validation form-control-last-child'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword.second, {'attr':{'class':'form-control form-control-gray form-control-has-validation form-control-last-child'}}) }}
                    </div>
                    <div>
                        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-block btn-sm offset-top-22"/>
                    </div>
                {{ form_rest(form) }}
            </div>
        </div>
    </div>
</section>